MONGOADMIN=
MONGOPASS=
MONGOURL=mongodb://host.docker.internal:27017/payments-and-subscriptions
MONGOTESTURL=mongodb://host.docker.internal:27017/payments-and-subscriptions_test
NODE_ENV=development
JWT_SECRET=dev_secret_change_in_production
PORT=3006
LOG_LEVEL=info
API_TITLE="Payments and Subscriptions API"
API_DESCRIPTION="This is the Payments and Subscriptions microservice API for SocialBeats"

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (from Stripe Dashboard)
# BASIC: €0/mes - 2 noticias/día, con ads
# PREMIUM: €10/mes - 10 noticias/día, sin ads
STRIPE_PRICE_BASIC=price_basic_plan_id_here
STRIPE_PRICE_PREMIUM=price_premium_plan_id_here

# SPACE Integration
SPACE_URL=http://host.docker.internal:5403
SPACE_API_KEY=your_space_api_key_here

# Frontend URL for redirects
FRONTEND_URL=http://localhost:5173