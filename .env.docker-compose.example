# MongoDB Configuration (containerizado, SIN autenticación)
MONGOADMIN=
MONGOPASS=
MONGOURL=mongodb://payments-and-suscription-mongodb:27017/payments-and-subscriptions
MONGOTESTURL=mongodb://payments-and-suscription-mongodb:27017/payments-and-subscriptions_test

# Application Configuration
NODE_ENV=development
PORT=3006
LOG_LEVEL=info

# Security
JWT_SECRET=dev_secret_change_in_production

# API Documentation
API_TITLE="Payments and Subscriptions API"
API_DESCRIPTION="This is the Payments and Subscriptions microservice API for SocialBeats"

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Price IDs (from Stripe Dashboard)
# FREE: €0.00/mes - Plan gratuito con funcionalidades básicas
# PRO: €9.99/mes - Plan profesional con más límites y features
# STUDIO: €19.99/mes - Plan más avanzado con todo desbloqueado
STRIPE_PRICE_FREE=price_1Sl6L7PKbLZoYa8Mx2Xb893X # Nuevo
STRIPE_PRICE_PRO=price_1Sl6LgPKbLZoYa8MdG6PQ8Dv # Nuevo
STRIPE_PRICE_STUDIO=price_1Sl8JQPKbLZoYa8MKLJIrtgH # Nuevo

# Stripe AddOn Price IDs (from Stripe Dashboard)
# AddOns are optional features that can be added to subscriptions
STRIPE_PRICE_ADDON_DECORATIVES=price_1Sl7v9PKbLZoYa8MjAiSkSn8 # Nuevo
STRIPE_PRICE_ADDON_PROMOTED_BEAT=price_1Sl7vePKbLZoYa8MOlhUsJg9 # Nuevo
STRIPE_PRICE_ADDON_EXTRA_DASHBOARD=price_1SlUWoPKbLZoYa8M5nVtSyF9

# SPACE Integration
SPACE_URL=http://host.docker.internal:5403
SPACE_API_KEY=your_space_api_key_here
SPACE_SERVICE_NAME=socialbeats # Nuevo
SPACE_SERVICE_VERSION=1.0 # Nuevo

# Frontend URL for redirects (esto puede ser fallo, ahora tenemos /socialbeats/app...)
FRONTEND_URL=http://localhost:5173/socialbeats # Nuevo

# Kafka Configuration
ENABLE_KAFKA=true
KAFKA_BROKER=kafka:9092
KAFKA_CONNECTION_MAX_RETRIES=5
KAFKA_CONNECTION_RETRY_DELAY=5000
KAFKA_COOLDOWN=30000

# INTERNAL API KEY
INTERNAL_API_KEY=