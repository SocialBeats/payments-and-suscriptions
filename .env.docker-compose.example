# MongoDB Configuration (containerizado, SIN autenticación)
MONGOADMIN=
MONGOPASS=
MONGOURL=mongodb://payments-and-suscription-mongodb:27017/payments-and-subscriptions
MONGOTESTURL=mongodb://payments-and-suscription-mongodb:27017/payments-and-subscriptions_test

# Application Configuration
NODE_ENV=development
PORT=3006
LOG_LEVEL=info

# Security
JWT_SECRET=dev_secret_change_in_production

# API Documentation
API_TITLE="Payments and Subscriptions API"
API_DESCRIPTION="This is the Payments and Subscriptions microservice API for SocialBeats"

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (from Stripe Dashboard)
# BASIC: €0/mes - 2 noticias/día, con ads
# PREMIUM: €10/mes - 10 noticias/día, sin ads
STRIPE_PRICE_BASIC=price_1SiacrPKbLZoYa8MUF2j4H7R
STRIPE_PRICE_PREMIUM=price_1SiadQPKbLZoYa8MyxsF2XPz

# SPACE Integration
SPACE_URL=http://space-nginx:5403
SPACE_API_KEY=space_api_key_here

# Frontend URL for redirects
FRONTEND_URL=http://localhost:5173

# Kafka Configuration
ENABLE_KAFKA=true
KAFKA_BROKER=kafka:9092
KAFKA_CONNECTION_MAX_RETRIES=5
KAFKA_CONNECTION_RETRY_DELAY=5000
KAFKA_COOLDOWN=30000